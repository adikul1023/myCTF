# Forensic CTF Platform - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============== Application ==============
DEBUG=true
APP_NAME=ForensicCTF
APP_VERSION=1.0.0

# ============== Security ==============
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-super-secret-key-change-this-in-production
FLAG_SECRET_KEY=another-super-secret-key-for-flag-generation

# ============== Database ==============
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=forensic_ctf
POSTGRES_PASSWORD=change-this-password-in-production
POSTGRES_DB=forensic_ctf

# ============== MinIO Storage ==============
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minio_access_key
MINIO_SECRET_KEY=minio_secret_key_change_this
MINIO_BUCKET_NAME=forensic-artifacts
MINIO_USE_SSL=false

# ============== Rate Limiting ==============
RATE_LIMIT_SUBMISSIONS_PER_MINUTE=10
RATE_LIMIT_AUTH_PER_MINUTE=5

# ============== Security ==============
# Comma-separated list of trusted proxy IPs/CIDRs
TRUSTED_PROXIES=127.0.0.1,172.16.0.0/12,10.0.0.0/8,192.168.0.0/16

# ============== CORS ==============
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
